<% if @article.errors.any? %>
  <div class="error col-sm-offset-3 col-sm-6"> 
    <h4>
      The following errors have occured:
    </h4>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form">
  <div class="col-sm-12">
    <%= form_for @article do |f| %>   
      <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter your article title here", autofocus: true %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter your article content here", autofocus: true %>
      </div>      
      <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>      
    <% end %>
    <div class="col-sm-offset-4 col-sm-4">
      [ <%= link_to "Cancel request and return to article list", articles_path %> ]
    </div>
  </div>
</div>
