<h1 align="center">
  Listing all articles
</h1>

<div class="center">
  <%= link_to 'Create new article', new_article_path, class: "btn btn-success btn-lg" %>
</div>

<div align="center">
  <%= will_paginate %>
</div>

<div class="row">
  <table class="table table-striped">
    <% @articles.each do |article| %>
      <tr>
        <td><strong><%= link_to article.title, article_path(article) %></strong></td>
        <td><%= truncate(article.description, length: 100) %></td>
        <td>Created by <%= link_to article.user.username, user_path(article.user) %> <%= time_ago_in_words(article.created_at) %> ago</td>
        <td align="right">
          <%= link_to 'EDIT', edit_article_path(article), class: "btn btn-primary btn-xs" %>
          <%= link_to 'DELETE', article_path(article), method: :delete, 
                                                        data: { confirm: "Are you sure you want to delete this article?" }, 
                                                        class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div align="center">
  <%= will_paginate %>
</div>
