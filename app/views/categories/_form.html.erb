<% content_for :errors do %>
  <%= render 'shared/errors', model: @category %>
<% end %>

<div class="row">
  <div class="col-sm-12 category-form">
    <%= form_for @category do |f| %>   
      <div class="form-group col-sm-offset-2 col-sm-8">
        <br><%= f.text_field :name, class: "form-control", placeholder: "Enter a new category", autofocus: true %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.submit "SUBMIT", class: "btn btn-primary btn-lg" %>
      </div>      
    <% end %>
  </div>
</div>