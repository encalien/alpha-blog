<h1 align="center">LOG IN</h1>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(:session, url: login_path) do |f| %>   
      <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control", autofocus: true %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.submit "LOG IN", class: "btn btn-primary btn-lg" %>
      </div>      
    <% end %>
    <div class="col-sm-offset-4 col-sm-4">
      [ <%= link_to "Cancel request and return to user list", users_path %> ]
    </div>
  </div>
</div>

<div class="row"> 
  <div class="center">
    <%= link_to 'Create new account', signup_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
