<% if model.errors.any? %>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">
      <div class="error"> 
        <h4>
          <%= pluralize(model.errors.count, "error") %>
          occured:
        </h4>
        <ul>
          <% model.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>