<% content_for :errors do %>
  <%= render 'shared/errors', model: @user %>
<% end %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @user do |f| %>   
      <div class="form-group col-sm-offset-2 col-sm-8">
        <b>First name</b>
        <%= f.text_field :firstname, class: "form-control", placeholder: "Enter your first name", autofocus: true %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <b>Last name</b>
        <%= f.text_field :lastname, class: "form-control", placeholder: "Enter your last name" %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <b>Username</b>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <b>E-mail address</b>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <b>Confirm e-mail address</b></br>
        <small>E-mails must match</small>
        <%= f.email_field :email_confirmation, class: "form-control", placeholder: "Confirm your email address" %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <b>Password</b></br>
        <small>Password must be at least 8 character long</small>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>
      <div class="form-group col-sm-offset-2 col-sm-8">
        <b>Confirm password</b></br>
        <small>Passwords must match</small>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
      </div>
    <div class="form-group col-sm-offset-2 col-sm-8">
        <%= f.submit(@user.new_record? ? "SIGN UP" : "Update account", class: "btn btn-primary btn-lg") %>
      </div>      
    <% end %>
  </div>
</div>
